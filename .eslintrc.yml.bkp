env:
  browser: true
  commonjs: true
  es6: true
  node: true
extends: 'eslint:recommended,airbnb'
parserOptions:
  ecmaFeatures:
    jsx: true
  ecmaVersion: 2018
  sourceType: module
plugins:
  - react
rules:
  prefer-object-spacing:
    - warn
  prefer-object-spread:
    - warn
  indent:
    - error
    - 2
  linebreak-style:
    - error
    - unix
  quotes:
    - error
    - double
  no-extra-parens:
    - 1
  no-useless-return:
    - 2
  semi:
    - error
    - never
